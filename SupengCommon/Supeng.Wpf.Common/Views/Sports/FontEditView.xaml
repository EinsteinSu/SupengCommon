<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Supeng.Wpf.Common.Views.Sports"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" x:Class="Supeng.Wpf.Common.Views.Sports.FontEditView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <dxlc:DataLayoutControl >
            <dxlc:LayoutItem Label="Font Family">
                <dxe:FontEdit Text="{Binding Data.FontFamily}"/>
            </dxlc:LayoutItem>
            <dxlc:LayoutItem Label="Font Family">
                <dxe:PopupColorEdit EditValue="{Binding Data.Foreground}"/>
            </dxlc:LayoutItem>
            <dxlc:LayoutItem Label="Font Size">
                <dxe:SpinEdit Text="{Binding Data.FontSize}"/>
            </dxlc:LayoutItem>
        </dxlc:DataLayoutControl>
    </Grid>
</UserControl>
